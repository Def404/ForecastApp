<Window x:Class="ForecastApp.registration_window.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ForecastApp.registration_window"
        mc:Ignorable="d"
        Title="RegistrationWindow" 
        Height="520" Width="300"
        WindowStartupLocation="CenterScreen"
        Background="{x:Null}"
        ResizeMode="NoResize">
    <Grid>
        <materialDesign:Card
            Background="WhiteSmoke"
            UniformCornerRadius="0">
            <StackPanel
                Orientation="Vertical"
                Margin="15,0"
                VerticalAlignment="Center">
                
                <TextBlock
                    Text="Регистрация"
                    FontSize="32"
                    HorizontalAlignment="Center"
                    Margin="0,25"
                    FontWeight="DemiBold"/>
                <TextBox
                    x:Name="NameTxtBox"
                    Margin="0,15,0,10"
                    materialDesign:HintAssist.Hint="Имя"/>
                <TextBox
                    x:Name="SurnameTxtBox"
                    Margin="0,15,0,10"
                    materialDesign:HintAssist.Hint="Фамилия"/>
                <TextBox
                    x:Name="EmailTxtBox"
                    Margin="0,15,0,10"
                    materialDesign:HintAssist.Hint="Почта"/>
                <TextBox
                    x:Name="LoginTxtBox"
                    Margin="0,15,0,10"
                    materialDesign:HintAssist.Hint="Логин"/>
                <PasswordBox
                    x:Name="PasswordBox"
                    Margin="0,10,0,10"
                    materialDesign:HintAssist.Hint="Пароль"/>
                <PasswordBox
                    x:Name="RepeatPasswordBox"
                    Margin="0,10,0,10"
                    materialDesign:HintAssist.Hint="Повторите пароль"/>
                <Button
                    x:Name="AuthBtn"
                    Content="Зарегистрироватся"
                    Margin="0, 25,0,10"/>
                
                <TextBlock
                    Text="ERRRRRROOOOOOOOOR MESSAAAGE"
                    Margin="0,10,0, 35"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>
